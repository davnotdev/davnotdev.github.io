---
import Layout from "./Layout.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
    <slot/>
    <style is:global>
    :root {
        padding: 0% 20% 0% 20%;
    }
    h1 {
        font-size: 3rem;
    }
    h2 {
        font-size: 2.5rem;
    }
    h3 {
        font-size: 2.25rem;
    }
    p, a {
        font-size: 1.5rem;
    }
    </style>
</Layout>
