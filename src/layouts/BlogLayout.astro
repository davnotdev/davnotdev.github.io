---
import Layout from "./Layout.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
    <div id="side_stick">
        <a href="/">Home</a>
        <a href="/blog/">Blog Home</a>
    </div>
    <main>
        <slot/>
    </main>
    <style is:global>
    main {
        padding: 0% 20% 0% 20%;
    }
    h1 {
        font-size: 3rem;
    }
    h2 {
        font-size: 2.5rem;
    }
    h3 {
        font-size: 1.8rem;
    }
    h4 {
        font-size: 1.5rem;
    }
    p, a, li {
        font-size: 1.4rem;
    }
    blockquote * {
        font-size: 1.2rem;
    }
    code {
        font-size: 1.1rem;
    }
    #side_stick {
        position: sticky;
        top: 1rem;
        left: 1rem;
        display: flex;
        flex-direction: column;
    }
    </style>
</Layout>
