---
import Layout from "./Layout.astro";

import type { MarkdownLayoutProps } from 'astro';

type Props = MarkdownLayoutProps<{
    title: string;
    date: string;
}>;

const { title } = Astro.props.frontmatter;
---

<Layout title={title} description="" useNavbar={true}>
    <slot/>
    <style is:global>
    @tailwind components;

    @layer components {
        h1 {
            @apply text-7xl md:p-6;
        }

        h2 {
            @apply text-5xl md:p-4;
        }

        h3 {
            @apply text-4xl md:p-4;
        }

        h4 {
            @apply text-3xl md:p-4;
        }

        p, a {
            @apply text-xl py-3;
        }

        p > a {
            @apply underline underline-offset-2 text-night-text-link;
        }

        li > a {
            @apply underline underline-offset-2 text-night-text-link;
        }

        li {
            @apply text-xl;
        }

        ul li:before {
            content: '- ';
        }

        hr {
            @apply my-12;
        }

        blockquote {
            @apply text-lg;
            /* No need to tailwind-ify */
            margin-bottom: 10px;
            margin-left: 20px;
            padding-left: 15px;
            border-left: 3px solid #ccc;
        }
            
        .astro-code {
            @apply mx-[-2rem] my-6 p-5 border-solid border-2 border-night-text rounded-xl opacity-90;
        }
    }
    </style>
</Layout>
